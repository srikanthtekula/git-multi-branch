 pipeline{
    agent any
	    stages {
        stage('Build Master') {
            when {
                branch 'master'
            }
            steps {
                echo ' Building Master successful'
            }
        }
		
		stage('Build Dev') {
            when {
                branch 'dev'
            }
            steps {
                echo ' Building Dev successful'
            }
        }
		
		stage('Build QA') {
            when {
                branch 'qa'
            }
            steps {
                echo ' Building QA successful'
            }
        }
    }
}